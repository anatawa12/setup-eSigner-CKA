{
	"name": "typescript-action",
	"version": "0.0.0",
	"private": true,
	"description": "TypeScript template action",
	"main": "lib/main.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"format": "npx biome format --write",
