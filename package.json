		"@actions/io": "^1.1.3",
		"@actions/tool-cache": "^2.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/jest": "^29.5.2",
		"@types/node": "^20",
		"@vercel/ncc": "^0.38.1",
		"jest": "^29.5.0",
		"jest-circus": "^29.5.0",
		"ts-jest": "^29.1.0",
		"typescript": "~5.5.4"
	},
	"packageManager": "npm@10.8.2+sha256.c8c61ba0fa0ab3b5120efd5ba97fdaf0e0b495eef647a97c4413919eda0a878b"
